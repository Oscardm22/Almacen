<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@color/Beige"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <!-- Fecha de la Venta -->
    <TextView
        android:id="@+id/tvSaleDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/totalContainer"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="8dp"
        android:textSize="16sp"
        android:textColor="@color/Brunswick_green"
        android:fontFamily="sans-serif-medium"
        tools:text="08/04/2023 14:30"/>

    <!-- Contenedor para ambos montos -->
    <LinearLayout
        android:id="@+id/totalContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@id/btnDeleteSale"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="8dp">

        <!-- Total en Dólares -->
        <TextView
            android:id="@+id/tvTotalUsd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/Brunswick_green"
            tools:text="$45.50"/>

        <!-- Total en Bolívares -->
        <TextView
            android:id="@+id/tvTotalBs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/Brunswick_green"
            tools:text="Bs 1.638,00"/>
    </LinearLayout>

    <!-- Cantidad de Productos -->
    <TextView
        android:id="@+id/tvItemsCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/Brunswick_green"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tvSaleDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSaleDate"
        tools:text="3 productos vendidos" />

    <!-- Botón Eliminar -->
    <ImageButton
        android:id="@+id/btnDeleteSale"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_delete"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/Eliminar_venta"/>

</androidx.constraintlayout.widget.ConstraintLayout>