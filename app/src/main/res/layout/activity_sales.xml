<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/Beige">

    <!-- Campo de búsqueda -->
    <EditText
        android:id="@+id/etSearch"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:autofillHints="productSearch"
        android:background="@drawable/edittext_rounded_bg"
        android:hint="@string/Search_product"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:maxLines="1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="@color/Brunswick_green"
        android:textColorHint="@color/Brunswick_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.9"/>

    <!-- Lista de productos disponibles -->
    <TextView
        android:id="@+id/tvAvailableLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/available_product"
        android:textColor="@color/Brunswick_green"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etSearch"
        app:layout_constraintWidth_percent="0.9"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAvailableProducts"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:clipToPadding="false"
        android:contentDescription="@string/available_products_description"
        android:paddingVertical="4dp"
        app:layout_constraintBottom_toTopOf="@id/tvCurrentSale"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAvailableLabel"
        app:layout_constraintWidth_percent="0.9"
        tools:ignore="SpeakableTextPresentCheck"/>

    <!-- Lista de productos en venta -->
    <TextView
        android:id="@+id/tvCurrentSale"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/Productos_en_venta"
        android:textColor="@color/Brunswick_green"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rvAvailableProducts"
        app:layout_constraintWidth_percent="0.9"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSaleProducts"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:clipToPadding="false"
        android:contentDescription="@string/sale_products_description"
        android:paddingVertical="4dp"
        app:layout_constraintBottom_toTopOf="@id/guidelineTotals"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCurrentSale"
        app:layout_constraintWidth_percent="0.9"
        tools:ignore="SpeakableTextPresentCheck"/>

    <!-- Guideline para posicionar la sección de totales -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTotals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="543dp" />

    <!-- Sección de totales convertida a ConstraintLayout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clTotals"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/total_background"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rvSaleProducts"
        app:layout_constraintWidth_percent="0.9">

        <TextView
            android:id="@+id/tvSubtotalLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/tvSubtotalLabel"
            android:textColor="@color/Brunswick_green"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- Total en Bolívares -->
        <TextView
            android:id="@+id/labelTotalBs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/TotalBs"
            android:textColor="@color/Brunswick_green"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSubtotalLabel"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvTotalBs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/tvTotalBs"
            android:textColor="@color/Brunswick_green"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@id/labelTotalBs"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/labelTotalBs"/>

    <!-- Botón Limpiar (izquierda) -->
    <Button
        android:id="@+id/btnClearSale"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button"
        android:minHeight="48dp"
        android:text="@string/limpiar_carrito"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnCompleteSale"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTotal"
        app:layout_constraintWidth_percent="0.45"/>

    <!-- Botón Finalizar (derecha) -->
    <Button
        android:id="@+id/btnCompleteSale"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button"
        android:minHeight="48dp"
        android:text="@string/registrar_venta"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnClearSale"
        app:layout_constraintTop_toBottomOf="@id/tvTotal"
        app:layout_constraintWidth_percent="0.45"/>

</androidx.constraintlayout.widget.ConstraintLayout>