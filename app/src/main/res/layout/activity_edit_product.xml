<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/Beige"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Nombre del Producto -->
        <TextView
            android:id="@+id/tvNameLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/label_name"
            android:textColor="@color/Brunswick_green"
            android:textSize="16sp"
            android:importantForAccessibility="yes"
            android:labelFor="@id/etProductName"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_max="400dp"/>

        <EditText
            android:id="@+id/etProductName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:textColor="@color/Brunswick_green"
            android:textSize="16sp"
            android:background="@drawable/edit_text_background"
            android:inputType="textCapWords"
            android:imeOptions="actionNext"
            android:maxLines="2"
            android:importantForAutofill="yes"
            android:autofillHints="name"
            android:importantForAccessibility="yes"
            android:accessibilityLiveRegion="polite"
            tools:text="Producto Ejemplo"
            app:layout_constraintTop_toBottomOf="@id/tvNameLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_max="400dp"/>

        <!-- Stock -->
        <TextView
            android:id="@+id/tvQuantityLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/label_quantity"
            android:textColor="@color/Brunswick_green"
            android:textSize="16sp"
            android:importantForAccessibility="yes"
            android:labelFor="@id/etQuantity"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/etProductName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_max="400dp"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/etQuantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:textColor="@color/Brunswick_green"
            android:textSize="16sp"
            android:background="@drawable/edit_text_background"
            android:inputType="number"
            android:digits="0123456789"
            android:imeOptions="actionNext"
            android:importantForAutofill="yes"
            android:autofillHints="quantity"
            android:importantForAccessibility="yes"
            android:accessibilityLiveRegion="polite"
            tools:text="10"
            app:layout_constraintTop_toBottomOf="@id/tvQuantityLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_max="400dp"/>

        <!-- Precio en Dólares -->
        <TextView
            android:id="@+id/tvPriceDollarsLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/label_price_dollars"
            android:textColor="@color/Brunswick_green"
            android:textSize="16sp"
            android:importantForAccessibility="yes"
            android:labelFor="@id/etPriceDollars"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/etQuantity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_max="400dp"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/etPriceDollars"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:textColor="@color/Brunswick_green"
            android:textSize="16sp"
            android:background="@drawable/edit_text_background"
            android:inputType="numberDecimal"
            android:imeOptions="actionNext"
            android:importantForAutofill="yes"
            android:autofillHints="price"
            android:importantForAccessibility="yes"
            android:accessibilityLiveRegion="polite"
            tools:text="25.99"
            app:layout_constraintTop_toBottomOf="@id/tvPriceDollarsLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_max="400dp"/>

        <!-- Precio en Bolívares -->
        <TextView
            android:id="@+id/tvPriceBolivaresLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/label_price_bolivares"
            android:textColor="@color/Brunswick_green"
            android:textSize="16sp"
            android:importantForAccessibility="yes"
            android:labelFor="@id/etPriceBolivares"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/etPriceDollars"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_max="400dp"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/etPriceBolivares"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:textColor="@color/Brunswick_green"
            android:textSize="16sp"
            android:background="@drawable/edit_text_background"
            android:inputType="numberDecimal"
            android:imeOptions="actionDone"
            android:importantForAutofill="yes"
            android:autofillHints="price"
            android:importantForAccessibility="yes"
            android:accessibilityLiveRegion="polite"
            tools:text="100.50"
            app:layout_constraintTop_toBottomOf="@id/tvPriceBolivaresLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_max="400dp"/>

        <!-- Botón Guardar -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="160dp"
            android:minHeight="48dp"
            android:text="@string/save_changes"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="@drawable/rounded_button"
            android:contentDescription="@string/desc_save_action"
            android:importantForAccessibility="yes"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            app:layout_constraintTop_toBottomOf="@id/etPriceBolivares"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>