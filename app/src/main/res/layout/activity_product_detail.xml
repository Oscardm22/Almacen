<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/Beige">

    <!-- Contenedor de Detalles (Centrado Verticalmente) -->
    <LinearLayout
        android:id="@+id/llDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/llButtons"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Nombre del Producto -->
        <TextView
            android:id="@+id/tvDetailName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@color/Brunswick_green"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- Stock -->
        <TextView
            android:id="@+id/tvDetailQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/Brunswick_green"
            android:layout_marginBottom="8dp"/>

        <!-- Precio en Dólares -->
        <TextView
            android:id="@+id/tvDetailPriceDollars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/Brunswick_green"
            android:layout_marginBottom="8dp"/>

        <!-- Precio en Bolívares -->
        <TextView
            android:id="@+id/tvDetailPriceBolivares"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/Brunswick_green"/>
    </LinearLayout>

    <!-- Contenedor de Botones (Centrado y más arriba) -->
    <LinearLayout
        android:id="@+id/llButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/llDetails"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Botón Editar -->
        <Button
            android:id="@+id/btnEdit"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:text="@string/edit_product"
            android:background="@drawable/rounded_button"
            android:textColor="@color/white"
            android:layout_marginEnd="16dp"/>

        <!-- Botón Eliminar -->
        <Button
            android:id="@+id/btnDelete"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:text="@string/delete_product"
            android:background="@drawable/boton_redondeado_eliminar"
            android:textColor="@color/white"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>