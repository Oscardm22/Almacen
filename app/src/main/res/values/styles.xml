<resources>
    <!-- Tema base -->
    <style name="Theme.TioCoco" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Fondo completo -->
        <item name="android:windowBackground">@color/Beige</item>

        <!-- Deshabilita el estilo automático para botones -->
        <item name="materialButtonStyle">@style/ButtonStyle.TioCoco</item>

        <!-- Pantalla inmersiva (oculta ambas barras) -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>

        <item name="buttonStyle">@style/ButtonStyle.TioCoco</item>

        <!-- Color del cursor (textCursorDrawable) -->
        <item name="android:textCursorDrawable">@null</item> <!-- Deshabilita el cursor por defecto -->
        <!-- Color de fondo al seleccionar texto -->
        <item name="android:textColorHighlight">@color/selection_green</item>
        <!-- Opacidad reducida (30%) -->
        <item name="android:colorControlHighlight">#334CAF50</item>


        <!-- Color del cursor y selección -->
        <item name="colorControlActivated">@color/Brunswick_green</item> <!-- Color principal para controles activos -->
        <item name="colorPrimary">@color/Brunswick_green</item> <!-- Color primario -->

    </style>



    <!-- Estilo para TextInputLayout con bordes redondeados -->
    <style name="RoundedTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearanceOverlay">@style/RoundedShapeAppearance</item>
        <item name="boxStrokeColor">@color/Brunswick_green</item>
        <item name="hintTextColor">@color/Brunswick_green</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
    </style>

    <!-- Forma de los bordes redondeados -->
    <style name="RoundedShapeAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!-- Estilo para el texto dentro de los campos -->
    <style name="TextInputEditTextStyle" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/Brunswick_green</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
        <item name="android:textColorHighlight">@color/selection_green</item>
    </style>

    <style name="ButtonStyle.TioCoco" parent="Widget.AppCompat.Button">
        <!-- Deshabilita completamente los estilos de Material -->
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>